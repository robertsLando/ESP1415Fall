<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unipd.dei.ESP1415.falldetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />
    
    <uses-permission 
        android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name=".MyNotificationBroadcastReceiver"
            android:enabled="true" >
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FallEvent"
            android:label="@string/title_activity_fall_event"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FallDetectorPreferences"
            android:label="@string/title_activity_fall_detector_preferences" >
        </activity>
        <activity
            android:name=".SessionDetails"
            android:label="@string/title_activity_session_details" 
            android:screenOrientation="portrait">
        </activity>

        <service android:name=".FallService">
            <intent-filter android:label="FallServiceFilter" >
                <action android:name="unipd.dei.ESP1415.falldetector.FallService"/>
            </intent-filter>
        </service>

        <activity
            android:name=".SendEmail"
            android:label="@string/title_activity_send_email" >
        </activity>
        
        <activity
            android:name=".GraphViewer">
        </activity>
      
    </application>

</manifest>
